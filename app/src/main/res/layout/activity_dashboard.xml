<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    tools:context=".dashboard"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

      <!--  <com.github.mikephil.charting.charts.LineChart
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linechart"/> -->

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/next_quiz_header"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:text="@string/next_quiz_header"
                android:textColor="#9F9F9F"
                android:fontFamily="@font/roboto_light"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"/>
            <TextView
            android:id="@+id/next_date_taken"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/next_quiz_date"
            android:textColor="#9F9F9F"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/status_header"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:text="@string/currentprofile"
                android:textColor="#9F9F9F"
                android:fontFamily="@font/roboto_light"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/currentStatus"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/currentlyfeeling"
                android:textColor="#9F9F9F"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/avgsleep_header"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".3"
                android:text="@string/averageslp"
                android:textColor="#9F9F9F"
                android:fontFamily="@font/roboto_light"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/averagesleep"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:fontFamily="@font/roboto_medium"
                android:text="sleep average"
                android:textColor="#9F9F9F"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/avg_mood_header"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".3"
                android:text="@string/avgmood"
                android:textColor="#9F9F9F"
                android:fontFamily="@font/roboto_light"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/averagemood"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:fontFamily="@font/roboto_medium"
                android:text="mood average"
                android:textColor="#9F9F9F"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>